@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["invalidLogin"] != null)
{
    <div class="alert alert-danger">
        @TempData["invalidLogin"]
    </div>
}


<div class="container login-container ">
    <div class="login-form bg-white text-center">
        <h3 class="text-center" style="padding-bottom: 10px;">Login</h3>
        <form>
            <div class="form-group my-3">

                <input name="email" type="email" class="form-control" id="email" placeholder="Enter email">
            </div>
            <div class="form-group my-3 mb-2">

                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
            </div>

            <button asp-action="LoginButton" asp-controller="Home" type="submit" style=" background-color: black; margin-top: 15px;" class="btn btn-block  text-white mb-3">Login</button>
            <p style="font-size: 14px;">Don't have an account? <a asp-action="Register" asp-controller="Home" style="color: gray; font-size: 14px; text-decoration: none;">Register now</a></p>
        </form>
    </div>
</div>