@model IEnumerable<LaFlor.Models.Orders>
@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Email</th>
                <th>Payment</th>
                <th>Placed Date</th>
                <th>Total</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.order_name</td>
                    <td>@item.order_number</td>
                    <td>@item.order_email</td>
                    <td>@item.order_payment_method</td>
                    <td>@item.order_placed_date</td>
                    <td>@item.order_total</td>
                    <td>
                        <span class="status @item.order_status.ToLower()">@item.order_status</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>